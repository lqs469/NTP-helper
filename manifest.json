{
    "name": "NTP Helper",
    "author": "Allen.Lee",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Ntp helper for development",
    "permissions": [
        "*://*/*",
        "tabs",
        "background",
        "activeTab",
        "topSites",
        "webNavigation",
        "webRequest"
    ],
    "icons": {
        "25": "assets/NTP_Icon20.png",
        "48": "assets/NTP_Icon40.png"
    },
    "browser_action": {
        "default_icon": {
            "20": "assets/NTP_Icon20.png",
            "40": "assets/NTP_Icon40.png"
        },
        "default_title": "Ntp Helper",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/ntpHelper.js"
            ],
            "run_at": "document_end"
        }
    ]
}